mixin infolist(title, secondtitle, arr, style)
  .infolist(class=`${style ? style : ""}`)
    .infolist__firstpart
      h4.infolist__title=title
      .infolist__btn
        <svg class="infolist-btnimg" width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
          <path d="M17.88 9.88H10.28V17.28H8.48V9.88H0.88V8.16H8.48V0.719998H10.28V8.16H17.88V9.88Z"/>
          </svg>
    .infolist__zeroblock
      .infolist__hiddenpart
        if secondtitle === undefined || secondtitle == false
        else
          p.infolist__information-title=secondtitle
        if arr === undefined || arr == false
        else
          ul.infolist__content
            each el in arr
              li.infolist__content-el=el


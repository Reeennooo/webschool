mixin review-el(cls, title, name, imgSrc, course, videoLink)
  .review-el(class=cls)
    a(href="#", data-modal="review-modal")
      h4 #{title}
    if (videoLink)
      a(href="https://www.youtube.com/embed/KXbTlG0xAsc" data-modal="video-modal" style="background-image: url(img/video-prev.jpg)").review-el__video.videoOpen
        span
          <svg width="7" height="9" viewBox="0 0 7 9" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 4.5L0.25 0.602886L0.25 8.39711L7 4.5Z" fill="#6647F4"/>
          </svg>
    .review-el__bottom
      .review-el__photo
        img(src=imgSrc ? imgSrc : "img/reviews-section/empty.png", alt="")
      .review-el__text #{name}, </br>курс <a href="#">#{course}</a>

